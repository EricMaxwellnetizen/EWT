<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <!-- 
        EHCache 3.x Configuration
        Provides disk-persistent caching with overflow support
    -->

    <!-- Cache Manager Configuration -->
    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <!-- Disk Storage Configuration -->
    <persistence directory="${java.io.tmpdir}/ehcache-data"/>

    <!-- Default Cache Template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
            <disk unit="MB">50</disk>
        </resources>
    </cache-template>

    <!-- Projects Cache -->
    <cache alias="projects" uses-template="default">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache>

    <!-- Users Cache -->
    <cache alias="users" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">15</offheap>
        </resources>
    </cache>

    <!-- Clients Cache -->
    <cache alias="clients" uses-template="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">300</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Stories Cache -->
    <cache alias="stories" uses-template="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <!-- SLA Rules Cache (Long-lived) -->
    <cache alias="slaRules" uses-template="default">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Lookups Cache (Very Long-lived) -->
    <cache alias="lookups" uses-template="default">
        <expiry>
            <ttl unit="hours">4</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">100</disk>
        </resources>
    </cache>

    <!-- User Sessions Cache (Short-lived) -->
    <cache alias="userSessions" uses-template="default">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

</config>
